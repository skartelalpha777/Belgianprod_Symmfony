{% extends 'base.html.twig' %}

{% block title %}Acteur index{% endblock %}

{% block body %}
    <h1>Liste des acteurs </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DateNaissance</th>
                <th>Sexe</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acteur in acteurs %}
            <tr>
                <td>{{ acteur.id }}</td>
                <td>{{ acteur.nom }}</td>
                <td>{{ acteur.prenom }}</td>
                <td>{{ acteur.dateNaissance ? acteur.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ acteur.sexe }}</td>
                <td>{{ acteur.pays }}</td>
                <td>
                    <a href="{{ path('app_acteur_show', {'id': acteur.id}) }}">show</a>
                    <a href="{{ path('app_acteur_edit', {'id': acteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_acteur_new') }}">Create new</a>
{% endblock %}
